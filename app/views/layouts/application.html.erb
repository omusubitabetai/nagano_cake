<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<header>
  <% if customer_signed_in? %>
    <li id="youkoso">ようこそ、<%= current_customer.last_name %>さん！</li>
    <li><%= link_to public_customer_path(current_customer) do %>マイページ<% end %></li>
    <li><%= link_to public_items_path do %>商品一覧<% end %></li>
    <li><%= link_to public_cart_items_path do %><%= current_customer.cart_items.count %>カート<% end %></li>
    <li><%= link_to destroy_customer_session_path, method: :delete do %>ログアウト<% end %></li>

    <% elsif admin_signed_in?%>
    <li><%= link_to ' 商品一覧', admin_items_path %></li>
    <li><%= link_to ' 会員一覧', admin_customers_path %></li>
    <li><%= link_to ' 注文履歴一覧', admin_path %></li>
    <li><%= link_to ' ログアウト', destroy_admin_session_path, method: :delete %></li>

    <% else %>
    <li><%= link_to public_about_path do %>About<% end %></li>
    <li><%= link_to public_items_path do %>商品一覧<% end %></li>
    <li><%= link_to new_customer_registration_path do %>新規登録<% end %></li>
    <li><%= link_to new_customer_session_path do %>ログイン<% end %></li>
    <% end %>
 </header>

 <main id="content">
  <%= yield %>
 </main>
</html>

