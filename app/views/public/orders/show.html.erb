<div class="container">
  <h4>注文履歴詳細</h4>
</div>

  <div class="container">
	  <div class="row">
	  <strong>注文情報</strong>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th class="table-active">注文日</th>
  	        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th class="table-active">配送先</th>
            <td><%= @order.postal_code %><br>
      	      <%= @order.address %><br>
      	      <%= @order.name %>
           </td>
          </tr>
          <tr>
            <th class="table-active">支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th class="table-active">ステータス</th>
            <td><%= @order.status %></td>
          </tr>
        </tbody>
       </table>
    </div>
  </div>

   <div class="container">
    <div class="row">
     	  <div class="col-sm-3">
          <strong>請求情報</strong>
          <table class="table table-bordered">
            <tr>
              <th class="table-active">商品合計</th>
              <td><%= @order.total_payment %>円</td>
            </tr>
            <tr>
              <th class="table-active">配送料</th>
              <td><%= @order.shipping_cost %>円</td>
            </tr>
            <tr>
              <th class="table-active">ご請求金額</th>
              <td><%= @order.total_payment+= @order.shipping_cost %>円</td>
            </tr>
          </table>
        </div>
    </div>

    <div class="container">
    	<div class="row">
	      <strong>注文内容</strong>
          <table class="table table-bordered">
  	        <thead>
	            <tr>
	    	        <th class="table-active">商品</th>
	              <th class="table-active">単価(税込)</th>
	    	        <th class="table-active">個数</th>
	    	        <th class="table-active">小計</th>
	            </tr>
  	        </thead>
  	        <tbody>
  	          <% @order_details.each do |order_detail| %>
                <tr>
		              <td><%= order_detail.item.name %></td>
		              <td><%= order_detail.item.price*1.1.floor %>円</td>
		              <td><%= order_detail.amount %></td>
		              <td><%= order_detail.item.price*1.1.floor*order_detail.amount %>円</td>
                </tr>
              <% end %>
            </tbody>
          </table>
