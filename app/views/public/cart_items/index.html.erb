<div class="container">
  <div class="row">
    <div class="col-xs-10">
      <h2>ショッピングカート</h2>
    </div>

    <div class="col-xs-2">
      <div><%= link_to "カートを空にする", public_cart_items_all_destroy_path, method: :delete, class:"btn btn-danger" %></div>
    </div>
  </div>

<div class="row">
  <table class="table-bordered">
    <tr>
      <th id="item-name">商品名</th>
      <th style="width:180px;">単価(税込)</th>
      <th style="width:180px;">数量</th>
      <th style="width:180px;">小計</th>
    </tr>

    <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= link_to public_item_path(cart_item.item_id) do %>
          <%= attachment_image_tag cart_item.item, :image, size: "50x50", fallback: "no_image.jpg"%><%= cart_item.item.item_name %>
          <% end %>
        </td>
          <td><%= cart_item.item.with_tax_price %></td>
          <td><%= cart_item.subtotal %></td>
          <% @total += cart_item.subtotal %>
      </tr>
    <% end %>
  </table>
</div>

<div class="row">
  <div class="col-xs-9">
    <div style="margin-top:100px;"><%= link_to "買い物を続ける", public_items_path, class:"btn btn-primary" %></td>
  </div>
  <div class="col-xs-3">
    <div class="total-price-box">
      <div class="total-price">合計金額</div>
      <div class="total-price"><%= @total %></div>
      </div>
     </div>
   </div>
  <div class="row">
  <div class="col-xs-4"></div>
  <div class="col-xs-4 cart_continue_to_order">
    <%= link_to "情報入力に進む", new_public_order_path,class: "btn btn-success btn-lg" %>
  </div>
  <div class="col-xs-4"></div>
  </div>
 </div>