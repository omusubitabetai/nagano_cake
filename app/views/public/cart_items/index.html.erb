<h2>ショッピングカート</h2>

<h4><%= link_to "カートを空にする", public_cart_items_all_destroy_path, method: :delete %></h4>

<table>
  <thead>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <%= link_to public_item_path(cart_item.item_id) do %>
        <%= cart_item.item.item_name %>
        <% end %>
        <td><%= cart_item.item.with_tax_price %></td>
        <td><%= cart_item.subtotal %></td>
        <% @total += cart_item.subtotal %>
      </tr>
    <% end %>

  <td><%= link_to "買い物を続ける", public_items_path %></td>
  <td><%= link_to "情報入力に進む", new_public_order_path %></td>
  </tbody>
</table>