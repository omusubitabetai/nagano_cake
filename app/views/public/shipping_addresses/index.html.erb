<div class="container">
  <div class="row">
    <div class="col-xs-12">
	    <h2>配送先登録/一覧</h2><br>

      <%= form_for @address, url:public_shipping_addresses_path, method: :post do |f| %>
          <div class="form-group">
            <%= f.label :"郵便番号" ,class: "col-xs-3 control-label" %>
            <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
          </div>
          <div class="form-group">
            <%= f.label :"住所" ,class: "col-xs-3 control-label" %>
            <%= f.text_field :address, autofocus: true, autocomplete: "shipping_address", :size => "40*40" %>
          </div>
          <div class="form-group">
            <%= f.label :宛名 %>
            <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
          </div>
          <div class="text-right mx-auto">
            <%= f.submit "新規登録", class:"btn btn-success" %>
          </div>
      <% end %>

   <div class="row shipping-lists">
    <div class="col-sm-50 px-sm-0 m-5 mx-auto">
     <table  class="table table-bordered">
       <thead class="table-active">
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
        </tr>
      <tbody>
        <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to "編集する", edit_public_shipping_address_path(address),method: :get , class: "btn btn-primary" %>
            <%= link_to "削除する", public_shipping_address_path(address), method: :delete , data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn btn-danger" %>
          </td>
        </tr>
        <% end %>
        </table>
       </tbody>
      </div>
     </div>
    </div>
   </div>
 </div>