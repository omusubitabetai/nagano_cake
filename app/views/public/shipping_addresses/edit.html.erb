<div class="container">
  <h2>配送先編集</h2><br>
    <%= form_for @address, url:public_shipping_address_path(@address), method: :patch do |f| %>
      <div class="field address">
        <%= f.label :郵便番号 %></br>
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %><br>
      </div><br>
      <div class="field address">
        <%= f.label :住所 %><br>
        <%= f.text_field :address, autofocus: true, autocomplete: "shipping_address" %><br>
      </div><br>
      <div class="field address">
        <%= f.label :宛名 %><br>
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %><br>
      </div><br>
      <div class="field">
      <%= f.submit "変更内容を保存", class:"btn btn-primary" %>
      </div>
    <% end %>
</div>
