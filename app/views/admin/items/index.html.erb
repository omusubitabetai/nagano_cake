<table>
  <thead>
    <tr>
     <th>商品ID</th>
     <th>商品名</th>
     <th>税抜価格</th>
　　 <th>ステータス</th>
   </tr>
  </thead>
<% @items.each do |item| %>
 <tbody>
   <tr>
     <td><%= item.id %></td>
     <td><%= link_to admin_item_path(item.id) do %>
     <u><%= item.name %></u>
     </td>
     <% end %>
     <td><%= item.price %></td>
     <td><% if item.is_active == true %>
     <p>販売中</p>
     <% else %>
     <p>販売停止中</p>
     <% end %>
     </td>
   </tr>
  </tbody>
 <% end %>
</table>
<%= paginate @items %>
