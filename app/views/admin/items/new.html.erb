<h1>商品新規登録</h1>
<%= form_with model: @item, url: new_admin_item_path, local: true do |f| %>
  <h4>商品名</h4>
  <%= f.text_field :name, placeholder:"商品名" %>

  <h4>商品説明</h4>
  <%= f.text_area :description, size: "50x5", placeholder:"ここに説明文を記述します" %>

	<h4>ジャンル</h4>
	<%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "--選択してください--" %>

	<h4>税抜価格</h4>
	<%= f.text_field :price_excluding_tax, placeholder:"1000" %>円

  <h4>販売ステータス</h4>
  <%= f.radio_button :sales_status, true, checked: true %>
  <%= f.label :sales_status, "販売中" %>
  <%= f.radio_button :sales_status, false %>
  <%= f.label :sales_status, "販売停止中" %>

  <%= f.submit '新規登録' %>
<% end %>

