<div class="container">
  <h2 class="mt-5 text-center">商品詳細</h2>
    <div class="row">

      <div class="row align-items-center m-5">
        <div class="col-lg text-center mb-5">
        <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "300x250" %>
        <% else %>
        <%= image_tag 'no_image', size: "300x250" %>
        <% end %>
      </div>

      <div class="col-xs-6">
        <div class="info-content">
        <p class="info-head">商品名</p>
        <p class="item-info-text"><%= @item.name %></p>
      </div>

      <div class="info-content">
        <p class="info-head">商品説明</p>
        <p class="item-info-text"><%= simple_format(@item.introduction)%></p>
      </div>

      <div class="info-content">
        <p class="info-head">税込価格(税抜価格)</p>
        <p><%= @item.tax_in_price %> (<%= @item.price %>) 円</p>
        <p class="info-head">販売ステータス</p>
          <%  if @item.is_active == true %>
        <p class="text-success ">販売中</p>
          <% else %>
        <p class="text-secondary ">販売停止中</p>
          <% end %>
      </div>

        <div class="d-flex justify-content-around">
         <%= link_to "編集する", edit_admin_item_path(@item.id), class: 'btn btn-success' %>
        </div>
      </div>
    </div>
  </div>
